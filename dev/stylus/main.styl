*
  margin 0
  padding 0
  outline none

html,
body
  width 100%
  height 100%

body
  background aliceblue

section
  background #5C6BC0
  padding-bottom 20px

h3
  color snow

form
  padding-bottom 20px

.input-title
  color #1A237E

#modal
  position absolute
  top 100px
  left calc(100% / 2 - 100px)
  background rgba(25, 25, 125, .3)
  border-radius 200px
  width 200px
  height 200px

.notfound
  display flex
  align-items center
  justify-content center

.notfound h1
  color #263238

.notfound a
  color #263238
  margin-left 10px

header
  height 60px
  display flex
  justify-content space-between
  align-items center

